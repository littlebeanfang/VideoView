<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="0.89">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/title"
            android:id="@+id/title"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="@android:color/white"
            android:background="#ff3280ff" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/content"
        android:layout_weight="0.11"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:background="#ff4f8eff">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/watchButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#003091ff"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:clickable="true">
                <ImageView
                    android:id="@+id/watchImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/watch_white"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:layout_margin="20dp" />
                <TextView
                    android:id="@+id/watchText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="视听"
                    android:paddingLeft="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:textSize="30dp"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/downloadButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#003091ff"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/downloadImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/download_white"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:layout_margin="20dp" />
                <TextView
                    android:id="@+id/downloadText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="下载"
                    android:paddingLeft="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:textSize="30dp"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/commentButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#003091ff"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/commentImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/comment_white"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:layout_margin="20dp" />
                <TextView
                    android:id="@+id/commentText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="评议"
                    android:paddingLeft="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:textSize="30dp"
                    android:textColor="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/profileButton"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="#003091ff"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:src="@drawable/profile_white"
                    android:background="#00000000"
                    android:layout_weight="1"
                    android:clickable="false"
                    android:layout_margin="20dp" />
                <TextView
                    android:id="@+id/profileText"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="我的"
                    android:paddingLeft="20px"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left"
                    android:textSize="30dp"
                    android:textColor="#ffffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/content_right"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/video_fragment"
                android:layout_weight="3"></FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:id="@+id/list_fragment"></FrameLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>