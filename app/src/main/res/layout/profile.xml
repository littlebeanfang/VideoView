<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="100dp"
    android:paddingRight="100dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/profile_video_img"
            android:src="@drawable/profile_video"
            android:layout_weight="1"
            android:layout_marginTop="200dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="视频"
            android:id="@+id/profile_video_txt"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#ff4488ff"
            android:textSize="40sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/profile_article_img"
            android:layout_weight="1"
            android:layout_marginTop="200dp"
            android:src="@drawable/profile_article" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="文章"
            android:id="@+id/profile_article_txt"
            android:layout_weight="2"
            android:textSize="40sp"
            android:gravity="center_horizontal"
            android:textColor="#ff4488ff"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/profile_config_img"
            android:layout_weight="1"
            android:layout_marginTop="200dp"
            android:src="@drawable/profile_config" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="设置"
            android:id="@+id/profile_config_txt"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="40sp"
            android:textColor="#ff4488ff" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/profile_picture_img"
            android:layout_marginTop="200dp"
            android:layout_weight="1"
            android:src="@drawable/profile_picture" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="图片"
            android:id="@+id/profile_picture_txt"
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="#ff4488ff"
            android:textSize="40sp"
            android:gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>